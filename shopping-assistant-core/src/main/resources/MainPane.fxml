<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderMain" minHeight="640" minWidth="860" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.perez.jaroslav.shoppingassistant.ViewController.MainController">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5" />
    </padding>
    <center>
        <BorderPane fx:id="mainView" prefHeight="600" prefWidth="600" BorderPane.alignment="CENTER">
        </BorderPane>
    </center>
    <bottom>
        <Button fx:id="nextButton" alignment="CENTER" contentDisplay="CENTER" onAction="#goToNextSection" text="Next" BorderPane.alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" right="40.0" />
         </BorderPane.margin>
        </Button>
    </bottom>
    <top>
        <Label fx:id="titleLabel" text="Label" BorderPane.alignment="CENTER">
            <font>
                <Font size="35.0" />
            </font>
        </Label>
    </top>
</BorderPane>
